{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Enhanced Survey Schema with Mixed Question Types",
  "type": "object",
  "required": ["id", "title", "topic", "questions", "results", "metadata"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^survey_[0-9]{3}$",
      "description": "ID format: survey_001, survey_002, etc."
    },
    "title": { "type": "string" },
    "topic": { "type": "string" },
    "description": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["dataSource", "researchDate", "sampleSize"],
      "properties": {
        "dataSource": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "url", "type"],
            "properties": {
              "name": { "type": "string" },
              "url": { 
                "type": "string", 
                "pattern": "^https?://.+$" 
              },
              "type": { "type": "string", "enum": ["study", "article", "research", "book", "website"] },
              "year": { "type": "integer", "minimum": 2010, "maximum": 2026 }
            }
          }
        },
        "researchDate": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
        "sampleSize": { "type": "integer", "minimum": 25, "maximum": 285 },
        "demographics": {
          "type": "object",
          "properties": {
            "ageRange": { "type": "string" },
            "countries": { "type": "array", "items": { "type": "string" } },
            "gender": { "type": "string" }
          }
        }
      }
    },
    "questions": {
      "type": "array",
      "minItems": 6,
      "maxItems": 6,
      "items": {
        "type": "object",
        "required": ["text", "type", "options", "context"],
        "properties": {
          "text": { "type": "string" },
          "type": { "type": "string", "enum": ["choice", "likert"] },
          "likertScale": {
            "type": "object",
            "required": ["min", "max", "minLabel", "maxLabel"],
            "properties": {
              "min": { "type": "integer", "enum": [1] },
              "max": { "type": "integer", "enum": [5] },
              "minLabel": { "type": "string" },
              "maxLabel": { "type": "string" }
            }
          },
          "context": {
            "type": "object",
            "required": ["researchBasis", "realWorldData"],
            "properties": {
              "researchBasis": { "type": "string" },
              "realWorldData": {
                "type": "object",
                "required": ["totalResponses", "distribution"],
                "properties": {
                  "totalResponses": { "type": "integer", "minimum": 25, "maximum": 285 },
                  "distribution": { "type": "array", "items": { "type": "number" }, "minItems": 3, "maxItems": 5 }
                }
              }
            }
          },
          "options": {
            "type": "array",
            "minItems": 3,
            "maxItems": 5,
            "items": {
              "type": "object",
              "required": ["text", "score", "analysis", "realWorldPercentage", "scientificBasis"],
              "properties": {
                "text": { "type": "string" },
                "score": { "type": "number", "minimum": 1, "maximum": 5 },
                "analysis": { "type": "string" },
                "realWorldPercentage": { "type": "number" },
                "scientificBasis": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "results": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "object",
        "required": ["range", "title", "description", "percentile", "realWorldComparison", "recommendations"],
        "properties": {
          "range": { "type": "string", "pattern": "^[0-9]+-[0-9]+$" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "percentile": {
            "type": "object",
            "required": ["value", "interpretation"],
            "properties": {
              "value": { "type": "number", "minimum": 0, "maximum": 100 },
              "interpretation": { "type": "string" }
            }
          },
          "realWorldComparison": {
            "type": "object",
            "required": ["percentage", "description"],
            "properties": {
              "percentage": { "type": "number", "minimum": 0, "maximum": 100 },
              "description": { "type": "string" }
            }
          },
          "recommendations": {
            "type": "array",
            "minItems": 3,
            "items": {
              "type": "object",
              "required": ["text", "source"],
              "properties": {
                "text": { "type": "string" },
                "source": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}